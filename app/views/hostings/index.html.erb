<h1>Show Hosts</h1>
<br />
<%= link_to 'Assign a New Host', new_hosting_path, :class => "action" %>
<br /><br />

<table>
  <tr>
    <th>Show</th>
    <th>Host</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hostings.each do |hosting| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= link_to hosting.show.title, hosting.show %></td>
    <td><%= link_to hosting.person.first_last_name, hosting.person %></td>
    <td><%= link_to 'Show', hosting, :class => "action" %></td>
    <td><%= link_to 'Edit', edit_hosting_path(hosting), :class => "action" %></td>
    <td><%= link_to 'Delete', hosting, confirm: 'Are you sure?', method: :delete, :class => "action" %></td>
  </tr>
<% end %>
</table>

<br />

