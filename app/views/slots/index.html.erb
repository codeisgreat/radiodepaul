<h1>Listing slots</h1>

<table>
  <tr>
    <th>Show</th>
    <th>Quarter</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slots.each do |slot| %>
  <tr>
    <td><%= slot.show.title %></td>
    <td><%= slot.quarter %></td>
    <td><%= slot.start_time %></td>
    <td><%= slot.end_time %></td>
    <td><%= slot.monday %></td>
    <td><%= slot.tuesday %></td>
    <td><%= slot.wednesday %></td>
    <td><%= slot.thursday %></td>
    <td><%= slot.friday %></td>
    <td><%= slot.saturday %></td>
    <td><%= slot.sunday %></td>
    <td><%= link_to 'Show', slot %></td>
    <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
    <td><%= link_to 'Destroy', slot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Slot', new_slot_path %>
