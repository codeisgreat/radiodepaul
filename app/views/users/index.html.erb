<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
		<td><%= user.email %></td>
		<% if user.id != session[:user_id] %>
    <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
  	<% end %>
	</tr>
<% end %>
</table>

