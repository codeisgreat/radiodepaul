= form_for @award do |f|
  -if @award.errors.any?
    #error_explanation
      %h2= "#{pluralize(@award.errors.count, "error")} prohibited this award from being saved:"
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :for
    = f.text_field :for
  .field
    = f.label :year
    = f.text_field :year
  .actions
    = f.submit 'Save'
