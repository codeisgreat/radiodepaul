<div class="page-header">
  <h1>Manager</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name</strong></dt>
  <dd><%= link_to @manager.person.name, @manager.person %></dd>
  <dt><strong>Position</strong></dt>
  <dd><%= @manager.position %></dd>
  <dt><strong>Office Hours</strong></dt>
  <dd><%= @manager.office_hours || 'None' %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @manager.email %></dd>
  <dt><strong>Phone Number</strong></dt>
  <dd><%= @manager.phone_number %></dd>  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              managers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manager_path(@manager), :class => 'btn' %>
  <%= link_to 'Delete',
              manager_path(@manager),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
