<%- model_class = @application.class -%>
<div class="page-header">
  <h1>Application for <%= @application.first_last_name %></h1>
  <h3><%= @application.created_at.strftime("Submitted on %m/%d/%Y at %I:%M%p") %></h3>
  <%= image_tag(@application.avatar.square.small.url, :style => "float:right") %>
</div>
<dl>
  <dd><strong>DePaul ID#:</strong> <%= @application.depaul_id %></dd>
  <dd><strong>GPA:</strong> <%= @application.gpa %></dd>
  <dd><strong>Year:</strong> <%= @application.year %></dd>
  <dd><strong>Major/Minor:</strong> <%= @application.major %></dd> 
  <dd><strong>Email:</strong> <%= @application.email %></dd>
  <dd><strong>Phone:</strong> <%= @application.phone %></dd>
  <dd><strong>Home City:</strong> <%= @application.home_city %></dd>
  <dd><strong>Home State:</strong> <%= @application.home_state %></dd>
  <dd><strong>Why DePaul?:</strong> <%= @application.why_depaul %></dd>
  <dd><strong>Personal Influences:</strong> <%= @application.influences %></dd>
  <dd><strong>Bio:</strong> <%= @application.bio %></dd>
  <dd><strong>Experience:</strong> <%= @application.experience %></dd>
  <dd><strong>Campus Involvement:</strong> <%= @application.campus_involvement %></dd>
  <% unless @application.position == "Other" then %>
    <dd><strong>Position:</strong> <%= @application.position %></dd>
  <% else %>
    <dd><strong>Position:</strong> <%= @application.position_other %></dd>
  <% end %>
  <% if @application.created_at < Date.strptime('09/01/2012', '%m/%d/%Y') || @application.position == "Host" %>
    <dd><strong>Host Type:</strong> <%= @application.host_type %></dd>
    <dd><strong>Co-Hosts:</strong> <%= @application.co_hosts %></dd>
    <dd><strong>Show Name:</strong> <%= @application.show_name %></dd>
    <dd><strong>Show Description:</strong> <%= @application.show_description %></dd>
    <% if @application.host_type == "Music" && @application.created_at > Date.strptime('09/01/2012', '%m/%d/%Y')  %>
      <dd><strong>Show Genres:</strong> <%= @application.show_genres %></dd>
    <% elsif @application.created_at > Date.strptime('09/01/2012', '%m/%d/%Y')  %>
      <dd><strong>Show Type:</strong> <%= @application.show_type %></dd>
    <% end %>
  <% end %>
  <dd><strong>Favorite Artists:</strong> <%= @application.favorite_artists %></dd>
  <dd><strong>Favorite TV Shows:</strong> <%= @application.favorite_tv_shows %></dd>
  <dd><strong>Favorite Films:</strong> <%= @application.favorite_films %></dd>
  <dd><strong>Anything Else:</strong> <%= @application.anything_else %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              applications_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_application_path(@application), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              application_path(@application),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
