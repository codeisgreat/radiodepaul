<h1>Listing podcasts</h1>

<table>
  <tr>
		<th>Type</th>
    <th>Title</th>
    <th>Description</th>
    <th>Contributors</th>
    <th>File</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @podcasts.each do |podcast| %>
  <tr>
    <td><%= podcast.podcast_type %></td>
		<td><%= podcast.title %></td>
    <td><%= podcast.description %></td>
    <td><%= podcast.contributors %></td>
		<% if podcast.file? %>
	  	<td><%= link_to podcast.file.url %>
		<% else %>
			<td>No file attached</td>
		<% end %>
    
    <td><%= link_to 'Show', podcast %></td>
    <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
    <td><%= link_to 'Destroy', podcast, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

