    <%= f.text_field :major %>
  </div>
  <div class="field">
    <b><%= f.label :class_year %></b><br />
    <%= f.text_field :class_year %>
  </div>
  <div class="field">
    <b><%= f.label :hometown %></b><br />
    <%= f.text_field :hometown %>
  </div>
	<div class="field">
    <b><%= f.label :avatar %></b><br />
		<% if @person.avatar? %>
			<%= image_tag(@person.avatar.thumb.url) %><br />
			Remove Avatar<%= f.check_box :remove_avatar %><br/>
		<% end %>
			Upload File: <%= f.file_field :avatar %><br />
			<%= f.hidden_field :avatar_cache %>
			Import from Web: <%= f.text_field :remote_avatar_url %>
	</div>
  <div class="actions">
    <%= submit_tag 'Add Person', :class => "form_submit" %>
  </div>
<% end %>
